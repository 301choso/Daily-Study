import java.util.*;

class Solution {
    public int solution(int[] array) {
        int answer = 0;
        
        for(int i = 0; i < array.length; i++) {
            String str = String.valueOf(array[i]);
            
            if(str.contains("7")){
                for(Character c : str.toCharArray()) {
                    if(c == '7') {
                        answer++;
                    }
                }
            }
        }
        return answer;
    }
}
